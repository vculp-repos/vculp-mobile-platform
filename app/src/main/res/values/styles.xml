<resources>

    <style name="Widget.Theme.Vculp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

<!--    app bar styles  -->

    <style name="Widget.Theme.Vculp.AppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.ThemeOverlay.Vculp.ToolBar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?colorOnPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Vculp.Headline</item>
    </style>

    <style name="TextAppearance.Vculp.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">18sp</item>
    </style>

<!--button style-->
    <style name="Widget.Theme.Vculp.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="Widget.Theme.Vculp.Button.TextButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.Theme.Vculp.TopCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:textAppearance">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Theme.Vculp.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Theme.Vculp.TextViewLikeEditText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Theme.Vculp.ListItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:padding">8dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


<!--    shape appearance -->
    <style name="ShapeAppearance.Vculp.RoundedImageView" parent="">
            <item name="cornerSize">2.5dp</item>
    </style>

</resources>