<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Vculp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_800</item>
        <item name="colorSecondary">@color/black_200</item>
        <item name="colorSecondaryVariant">@color/black_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_light</item>


        <item name="android:statusBarColor">@color/black</item>
        <item name="appBarLayoutStyle">@style/Widget.Theme.Vculp.AppBar</item>
        <item name="toolbarStyle">@style/Widget.ThemeOverlay.Vculp.ToolBar</item>
        <item name="materialButtonStyle">@style/Widget.Theme.Vculp.Button</item>
        <item name="editTextStyle">@style/Widget.Theme.Vculp.EditText</item>
    </style>

    <style name="Theme.Vculp" parent="Base.Theme.Vculp" />

    <style name="ThemeOverlay.Vculp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/black</item>
    </style>
</resources>